#root(style="width: 280px; margin: 40px auto;")
script(src="https://cdn.auth0.com/js/lock-7.5.min.js")
script.
  var lock = new Auth0Lock('#{auth0ClientId}', '#{auth0Domain}');
  lock.show({
      container: 'root'
    , callbackURL: '#{callbackUrl}'
    , responseType: 'code'
    , authParams: {
      scope: 'openid profile'
    }
  });
